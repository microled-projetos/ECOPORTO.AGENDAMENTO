@model Ecoporto.Posicionamento.Models.ViewModels.AgendamentoVeiculosViewModel

@{ 
    var agendamentoId = Model.VeiculosAgendados.Select(c => c.AgendamentoId).First();
}

<div id="pnlConcluido" class="row">
    <div class="col-lg-12">
        <h3><img src="@Url.Content("~/Content/img/icone-ok.png")" class="mr-4" />Programação realizada com sucesso!</h3>

        <br />

        @if (Model.VeiculosAgendados.Any())
        {
            <p>Clique nos itens abaixo para imprimir o(s) protocolo(s):</p>

            <ul>
                @foreach (var itemCs in Model.VeiculosAgendados)
                {
                    <li>
                        <a href="@Url.Action("Protocolo", "AgendamentoVeiculos", new { id = itemCs.AgendamentoId, unificado = false })" target="_blank">@itemCs.Chassis @itemCs.Marca @itemCs.Modelo</a>
                    </li>
                }
            </ul>

            <a href="@Url.Action("Protocolo", "AgendamentoVeiculos", new { id = agendamentoId, unificado = true })" target="_blank"><img src="~/Content/img/icone-impressora.png" /> Imprimir Todos</a>

            <p class="lead">
                <a class="btn btn-info btn-lg mt-4" href="@Url.Action("Consultar","AgendamentoVeiculos")" role="button">Consultar Agendados</a>
            </p>
        }

    </div>
</div>
