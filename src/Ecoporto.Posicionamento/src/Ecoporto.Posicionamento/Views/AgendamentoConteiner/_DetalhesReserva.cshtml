@model Ecoporto.Posicionamento.Models.ViewModels.AgendamentoConteinerViewModel

<div class="row">
    <div class="form-group col-md-3">
        @Html.LabelFor(model => model.NavioViagem)
        @Html.EditorFor(model => model.NavioViagem, new { htmlAttributes = new { @class = "form-control-plaintext detalhes-reserva" } })
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(model => model.Exportador)
        @Html.EditorFor(model => model.Exportador, new { htmlAttributes = new { @class = "form-control-plaintext detalhes-reserva" } })
    </div>
    <div class="form-group col-md-3">
        @Html.LabelFor(model => model.Porto)
        @Html.EditorFor(model => model.Porto, new { htmlAttributes = new { @class = "form-control-plaintext detalhes-reserva" } })
    </div>
</div>

@Html.LabelFor(model => model.Conteineres, new { @class = "mb-3" })

<small class="float-right mr-0 pt-1">
    <a href="#" onclick="selecionarTodosConteineres()"><i class="fa fa-check"></i> Selecionar todos</a>
</small>

<div class="row" id="pnlConteineres">

    @foreach (var conteiner in Model.Conteineres)
    {
        var icone = conteiner.Tamanho == 20 ? "icone-conteiner-20.png" : "icone-conteiner-40.png";

        <div class="form-group col-md-3 mb-0">
            <div class="chk-image-container">
                <input type="checkbox" class="chk-image" name="ConteineresSelecionados" value="@conteiner.Id" />
                <img src="@Url.Content("~/Content/img/" + icone)" />
            </div>
            <div class="sem-quebra">
                @conteiner.Sigla
            </div>
            <small class="sem-quebra" style="position: relative; top: -7px; color: #778899;">
                @conteiner.TipoDescricao / @conteiner.Tamanho
            </small>

        </div>
    }

</div>