@model Ecoporto.Posicionamento.Models.ViewModels.AgendamentoConteinerViewModel

@{ 
    var agendamentoId = Model.ConteineresAgendados.Select(c => c.AgendamentoId).First();
}

<div id="pnlConcluido" class="row">
    <div class="col-lg-12">
        <h3><img src="@Url.Content("~/Content/img/icone-ok.png")" class="mr-4" />Programação realizada com sucesso!</h3>

        <br />

        @if (Model.ConteineresAgendados.Any())
        {
            <p>Clique nos contêineres abaixo para imprimir o(s) protocolo(s):</p>

            <ul>
                @foreach (var cntr in Model.ConteineresAgendados)
                {
                    <li>
                        <a href="@Url.Action("Protocolo", "AgendamentoConteiner", new { id = cntr.AgendamentoId, unificado = false })" target="_blank">@cntr.Sigla</a>
                    </li>
                }
            </ul>

            <a href="@Url.Action("Protocolo", "AgendamentoConteiner", new { id = agendamentoId, unificado = true })" target="_blank"><img src="~/Content/img/icone-impressora.png" /> Imprimir Todos</a>

            <p class="lead">
                <a class="btn btn-info btn-lg mt-4" href="@Url.Action("Consultar","AgendamentoConteiner")" role="button">Consultar Agendados</a>
            </p>
        }

    </div>
</div>
