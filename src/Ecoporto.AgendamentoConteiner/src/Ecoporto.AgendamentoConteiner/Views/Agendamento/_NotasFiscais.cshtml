@model Ecoporto.AgendamentoConteiner.Models.ViewModels.AgendamentoViewModel

<div class="row">
    <div class="form-group col-md-12">
        @Html.LabelFor(model => model.BookingCsItemId)
        @Html.DropDownListFor(c => c.BookingCsItemId, new MultiSelectList(Model.ItensReserva, "Id", "Descricao"), string.Empty, new { @class = "form-control" })
    </div>
</div>

<div class="row">
    <div class="form-group col-md-5">
        @Html.LabelFor(model => model.Danfe)
        @Html.EditorFor(model => model.Navio, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group col-md-2">
        @Html.LabelFor(model => model.Numero)
        @Html.EditorFor(model => model.Viagem, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group col-md-2">
        @Html.LabelFor(model => model.Serie)
        @Html.EditorFor(model => model.Abertura, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group col-md-3">
        <label for="btnAdicionarNotaFiscal">&nbsp;</label>
        <a id="btnAdicionarNotaFiscal" href="#" class="btn btn-outline-info btn-block btn-as-block"><i class="fas fa-save"></i>&nbsp;&nbsp;Adicionar NF</a>
    </div>
</div>

