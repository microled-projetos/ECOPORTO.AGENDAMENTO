<div data-id="0" class="modal" tabindex="-1" role="dialog" id="modal-conteiner-reefer">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Contêiner Reefer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="modal-mensagem-conteiner">
                    <strong>  Confirma as informações quanto a Refrigeração?</strong>
                </p>
                <table class="text-center">
                    <tr>
                        <td>
                            <img src="@Url.Content("~/Content/img/icone-reefer.png")">
                        </td>
                        <td valign="top">

                            <table class="table table-sm">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Reefer</th>
                                        <th>Temperatura</th>
                                        <th>Umidade</th>
                                        <th>Ventilação</th>
                                        <th>Escala</th>
                                    </tr>
                                    <tr>
                                        <td id="lblModalReefer"></td>
                                        <td id="lblModalReeferTemp"></td>
                                        <td id="lblModalReeferUmidade"></td>
                                        <td id="lblModalReeferVent"></td>
                                        <td id="lblModalReeferEscala"></td>
                                    </tr>
                                </thead>
                            </table>
                        </td>
                    </tr>
                </table>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Não</button>
                <button type="button" class="btn btn-info" onclick="confirmarCadastroConteiner()">Sim</button>
            </div>
        </div>
    </div>
</div>